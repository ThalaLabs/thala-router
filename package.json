{
  "name": "thala-sdk",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "main": "index.js",
  "scripts": {
    "prepare": "husky",
    "typecheck": "pnpm -r run typecheck",
    "build": "pnpm run build",
    "test": "pnpm -r run test",
    "format": "prettier . --write",
    "release": "turbo build typecheck test && changeset publish"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "pnpm -r run eslint --fix",
      "prettier --write"
    ],
    "*.json": "prettier --write"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.1",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "prettier": "^3.2.5"
  },
  "license": "MIT"
}
